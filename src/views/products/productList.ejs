<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>
   
    <link rel="stylesheet" href="/css/styles_productList.css">
    <title>Wedo Studio</title>
</head>

<body class="pl_body_productCart">

    <%- include('../partials/header') %>

    <main>
        <div class="comandos">
            <p>Filtrar</p>
            <p>Ordenar</p>
        </div>
        <div class="ordenar">
            <a href="/products/createProducts">Crear producto</a>
            <form action="" method="">
                <label for="order">Ordenar por</label>
                <select name="order" id="order">
                    <option value="1">MÃ¡s relevantes</option>
                    <option value="2">Menor precio</option>
                    <option value="3">Mayor precio</option>
                </select>
            </form>
        </div>
        <div class="buscador">
            <form action="/products/productList" method="GET">
                <label for="product_name">Buscar:</label>
                <input type="text" name="product_name" id="product_name">
                <input type="submit" value="Enviar">
            </form>
        </div>
        <div class="pl_main_productCart">
            <div class="pl_main_items1">
                
                <section class="pl_main_items_product">
                   
                    <% products.forEach(product => { %>
                        <%- include('../partials/productList_items', { product }) %>
                    <% }) %>                
                    
                </section>
            </div>  
        </div>          
    </main>
    
    <%- include('../partials/footer') %>

</body>
</html>