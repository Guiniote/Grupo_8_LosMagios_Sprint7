<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>
   
    <link rel="stylesheet" href="/css/styles_courseList.css">
    <title>Wedo Studio</title>
</head>

<body class="pl_body_courseCart">

    <%- include('../partials/header') %>

    <main>
        <div class="comandos">
            <p>Filtrar</p>
            <p>Ordenar</p>
        </div>
        <div class="ordenar">
            <a href="/courses/createCourses">Crear curso</a>
            <form action="" method="">
                <label for="order">Ordenar por</label>
                <select name="order" id="order">
                    <option value="1">MÃ¡s relevantes</option>
                    <option value="2">Menor precio</option>
                    <option value="3">Mayor precio</option>
                </select>
            </form>
        </div>

        <div class="buscador">
            <form action="/courses/courseList" method="GET">
                <label for="course_name">Buscar:</label>
                <input type="text" name="course_name" id="course_name">
                <input type="submit" value="Enviar">
            </form>
        </div>

        <div class="pl_main_courseCart">
            <div class="pl_main_items1">
                <section class="pl_main_items_course">
                    
                    <% courses.forEach(course => { %>
                        <%- include('../partials/courseList_items', { course }) %>
                    <% }) %>                
                    
                </section>
            </div>  
        </div>          
    </main>
    
    <%- include('../partials/footer') %>

</body>
</html>